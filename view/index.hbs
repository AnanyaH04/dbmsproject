            text-align: center;
            font-size: 50px;
             border: 3px solid blue;
            padding: 10px;
            
        }
        .menu button{
            border:2px solid rgb(209, 33, 48);
            padding: 15px 32px;
             text-align: center;
             display: inline-block;
             margin-bottom: 5%;
        }
        .homepage{
            text-align: center;
        }



        .Heading{
        font-size: 20px;
        font-weight: bold;
        float: left;
        color: azure;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        display: inline-block;
    }
    .wrapper{
        margin:10px auto;
        padding:0 10%;
        padding-bottom: 10px;
        text-transform: capitalize;
    }
    h1{
        margin-top: 80px;
        color: rgb(1, 39, 51);
        font-size: 45px;
        text-align: center;
        padding-bottom: 15px;
        text-shadow: 0 15px 10px rgba(0,0,0,0.2);
    }

    .container{
        display: grid;
        gap:12px;
        {{!-- grid-template-columns: repeat(auto-fit,minmax(160px,1fr)); --}}
         grid-template-columns: 250px 250px 250px 250px 250px;
    }
    .box{
        height: 200px;
        padding: 20px;
        text-align: center;
        border-radius: 5px;
        background: rgb(232, 119, 204);
        box-shadow: 0px 5px 10px rgba(0,0,0,0.2);
        border: 3px rgb(1, 39, 51);
    }
    .box img{
        height: 70px;
    }
    .box h3{
        color:rgb(1,39,51);
        padding:10px 0;
        font-size: 20px;
    }
    .box p{
        color:rgb(1,39,51);
        font-size: 14px;
        line-height: 1.6;

    }
    .btn{
        color:#fff;
        border:none;
        outline: none;
        font-size: 20px;
        margin-top: 10px;
        padding:1px 10px;
        background: #333;
        border-radius: 5px;
        display: inline-block;
        text-decoration: none;
    }
    .btn:hover{
        letter-spacing: 1px;
    }

    .btn:hover{
        transform: scale(1.03);
        box-shadow: 0 10px 15px rgba(241, 234, 234, 0.3);

    }

    @media (max-width:770px){
        .wrapper{
            padding:20px;

        }
    }
        
    </style>
</head>
